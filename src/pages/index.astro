---
import "../styles/global.css";
import Nav from "../components/Nav.svelte";
import Footer from "../components/Footer.svelte";
import Hero from "../sections/Hero.svelte";
import About from "../sections/About.svelte";
import WorkExperience from "../sections/WorkExperience.svelte";
import Projects from "../sections/Projects.svelte";
import Contact from "../sections/Contact.svelte";
import Cursor from "../components/Cursor.svelte";
import data from "../data/data.json";
---

<html lang="en">
	<head>
		<!-- ✅ Meta Information -->
		<title>{`${data.info.name} | Developer Portfolio`}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content={`${data.info.name} is a Full Stack Developer specializing in web development, UI/UX, and scalable software solutions. Explore top projects, technologies, and experience.`}
		/>
		<meta name="author" content={`${data.info.name}`} />
		<meta
			name="keywords"
			content={`${data.info.name}, Full Stack Developer, Web Developer, Software Engineer, UI/UX Designer, JavaScript, TypeScript, Svelte, Astro, React, Node.js, Express, Tailwind CSS, MongoDB, MySQL, Firebase, AWS, Git, Cloud Computing, API Development, Open Source, Responsive Web Design, Frontend Developer, Backend Developer`}
		/>

		<!-- ✅ OpenGraph Meta Tags (For Social Media) -->
		<meta
			property="og:title"
			content={`${data.info.name} | Developer Portfolio`}
		/>
		<meta
			property="og:description"
			content={`Explore ${data.info.name}'s cutting-edge projects, UI/UX designs, and full-stack web development expertise.`}
		/>
		<meta
			property="og:image"
			content="https://portfolio-animesh-dev.vercel.app/assets/og-image.webp"
		/>
		<meta
			property="og:url"
			content="https://portfolio-animesh-dev.vercel.app"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="en_US" />

		<!-- ✅ X (Twitter) Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content={`${data.info.name} | Developer Portfolio`}
		/>
		<meta
			name="twitter:description"
			content={`Check out ${data.info.name}'s portfolio featuring advanced web development, UI/UX, and interactive projects.`}
		/>
		<meta
			name="twitter:image"
			content="https://portfolio-animesh-dev.vercel.app/assets/og-image.webp"
		/>
		<meta name="twitter:site" content="@Animesh246" />

		<!-- ✅ Canonical URL -->
		<link rel="canonical" href="https://portfolio-animesh-dev.vercel.app" />

		<!-- ✅ Sitemap -->
		<link
			rel="sitemap"
			type="application/xml"
			title="Sitemap"
			href="/sitemap.xml"
		/>

		<!-- ✅ Robots Meta -->
		<meta name="robots" content="index, follow" />

		<!-- ✅ Favicon & PWA -->
		<link rel="icon" type="image/png" href="/favicon-96x96.png" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/manifest.webmanifest" />
		<meta name="theme-color" content="#fe6909" />
		<meta
			name="msapplication-TileImage"
			content="/web-app-manifest-192x192.png"
		/>
		<meta name="msapplication-TileColor" content="#0a0c0f" />

		<!-- ✅ Google Site Verification (For SEO) -->
		<meta
			name="google-site-verification"
			content="fBQ2jzQeowY2tp8cTpJDqNKiMOD9mcU6U6UocqXqnHc"
		/>

		<!-- ✅ Schema.org Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "{data.info.name}",
				"url": "https://portfolio-animesh-dev.vercel.app",
				"image": "https://portfolio-animesh-dev.vercel.app/assets/og-image.webp",
				"jobTitle": "Full Stack Developer",
				"description": "A passionate software developer specializing in UI/UX, backend development, and scalable web solutions.",
				"sameAs": [
					"https://github.com/Animesh246",
					"https://x.com/Animesh246",
					"https://linkedin.com/in/animesh246"
				]
			}
		</script>
	</head>
	<body>
		<Cursor client:load />
		<Nav client:load />
		<Hero client:load />
		<About client:load />
		<WorkExperience client:load />
		<Projects client:load />
		<Contact client:load />
		<Footer client:load />
	</body>
</html>
